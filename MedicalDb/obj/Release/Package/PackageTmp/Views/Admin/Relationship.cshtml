@model IEnumerable<MedicalDb.Models.Relationship>

@{
    ViewBag.Title = "Relationship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Relationships</h3>

<p>
    @Html.ActionLink("Create New", "CreateRelationship")
</p>
<table class="table" style="width:50%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RelationName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RelationName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRelationship", new { id = item.Rid }) |
            @Html.ActionLink("Delete", "DeleteRelationship", new { id = item.Rid })
        </td>
    </tr>
}

</table>
