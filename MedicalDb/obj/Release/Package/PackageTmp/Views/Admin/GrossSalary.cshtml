@model IEnumerable<MedicalDb.Models.GrossSalary>

@{
    ViewBag.Title = "GrossSalary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Gross Salary</h3>

<p>
    @Html.ActionLink("Create New", "CreateGrossSalary")
</p>
<table class="table" style="width:50%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditGrossSalary", new { id = item.Sid }) |
                @Html.ActionLink("Delete", "DeleteGrossSalary", new { id = item.Sid })
            </td>
        </tr>
    }

</table>
